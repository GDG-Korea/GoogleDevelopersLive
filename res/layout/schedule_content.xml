<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/schedule_content_outline"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:descendantFocusability="blocksDescendants" >

        <ImageView
            android:id="@+id/btn_new_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:focusable="false"
            android:src="@drawable/ic_new_event" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/btn_new_event"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/schedule_content_thumbnails"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:background="#FF000000" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/schedule_content_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Title"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/schedule_content_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>