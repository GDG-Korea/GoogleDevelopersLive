<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listview_contents_outline"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/navi_effect"
    android:padding="4dp" >

    <ImageView
        android:id="@+id/listview_content_thumbnail"
        android:layout_width="107dp"
        android:layout_height="60dp"
        android:layout_marginRight="4dp"
        android:background="#FF000000"
        android:contentDescription="@string/content_description_thumbnail" />

    <TextView
        android:id="@+id/listview_content_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/listview_content_thumbnail"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textIsSelectable="false"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/listview_content_date"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/listview_content_name"
        android:layout_toRightOf="@+id/listview_content_thumbnail"
        android:fontFamily="sans-serif-light"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textIsSelectable="false" />

</RelativeLayout>